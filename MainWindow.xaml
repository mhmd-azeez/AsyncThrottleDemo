<Window x:Class="AsyncThrottleDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncThrottleDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>
            <Button x:Name="moveButton" Content="Move" Click="moveButton_Click" />
            <Label/>
            <Button x:Name="stopButton" Content="Stop" Click="stopButton_Click" />
        </StackPanel>

        <TextBox x:Name="logTextBox" IsReadOnly="True" Grid.Row="2" />
    </Grid>
</Window>
